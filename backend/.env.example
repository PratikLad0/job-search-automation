SCRAPE_DELAY_MAX=8
SCRAPE_MAX_PAGES=5
SCRAPE_MAX_DAILY_RUNS=3


# ─── Automation Settings ──────────────────────────────────────
# Path to your browser's User Data directory (to keep login sessions)
# Windows Example: "C:\Users\YourName\AppData\Local\Google\Chrome\User Data"
