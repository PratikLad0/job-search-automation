# ─── AI Provider Settings ──────────────────────────────────────
# Options: ollama, gemini, openai
AI_PRIMARY_PROVIDER=ollama
AI_BACKUP_PROVIDER=gemini

# Ollama Settings
OLLAMA_MODEL=llama3.1
OLLAMA_BASE_URL=http://localhost:11434

# Gemini Settings
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# OpenAI Settings
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini


# ─── Job Search Preferences ───────────────────────────────────
# Comma-separated list of roles and locations
TARGET_ROLES="Backend Engineer,Software Development Engineer,Python Developer"
TARGET_LOCATIONS="India,Germany,Netherlands,UK,Singapore,UAE,Remote"

# Matching Settings
MIN_MATCH_SCORE=7
EXPERIENCE_YEARS=5


# ─── Salary Filters (Minimums) ────────────────────────────────
SALARY_MIN_INR=2000000
SALARY_MIN_EUR=65000
SALARY_MIN_GBP=60000
SALARY_MIN_SGD=100000
SALARY_MIN_AED_MONTHLY=25000
SALARY_MIN_USD=70000
SALARY_MIN_SEK=600000


# ─── Scraping Safety Settings ─────────────────────────────────
